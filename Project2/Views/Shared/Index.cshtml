
@{
    Layout = "_LayoutManager";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm("Index", "Employee",FormMethod.Get))
    {
        <p>
            <b>Search by:</b><h6>Employee Number</h6>
            @Html.TextBox("Search")<input type="submit" value="Search" />
        </p>
    }

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Employee Number</th>
                <th>Department</th>
                <th>Education Field</th>
                <th>Hourly Rate</th>
                <th> Monthly Income </th>
                <th>Monthly Rate</th>
                <th>Action</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var employee in ViewBag.employees)
            {
                <tr>
                    <td>@employee.EmployeeNumber</td>
                    <td>@employee.Department</td>
                    <td>@employee.EducationField</td>
                    <td>@employee.HourlyRate</td>
                    <td>@employee.MonthlyIncome</td>
                    <td>@employee.MonthlyRate</td>
                    <td>
                        Edit |
                        <a asp-controller="emplyee_details" asp-action="delete" asp-route-id="@employee.EmployeeNumber" onclick="return confirm('You Want Do Delete Entered Employee?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
