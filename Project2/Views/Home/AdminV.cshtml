
@{
    Layout = null;
}
<link href="~/css/Styler.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminView</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" href="#">
                    OrganizationX
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-action="Home">Logout</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1 navbar-dark">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="UserInfo">Add Personal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="AdminInspect">View Users Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark">View Personal</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="fixed-bottom">
        <footer class="border-top blockquote-footer text-muted text-center">
            <div class="container">
                Copyright &copy; OrganizationX @DateTime.Now.Year
            </div>
        </footer>
    </div>
</body>
</html>
