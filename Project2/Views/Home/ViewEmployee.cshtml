
@{
    Layout = null;
}
<link href="~/css/Styler.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
<link href="~/lib/twitter-bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />
<script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
<script src="~/lib/jquery/jquery.js"></script>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewEmployee</title>
</head>
<body>
    <table id="=id" class="table table-striped table-bordered nowrap">
        <tr>
            <th>Employee Number</th>
            <th>Department</th>
            <th>Education Field</th>
            <th>Hourley Rate</th>
            <th>Montley Rate</th>
            <th>Montle Income</th>
            <th>Acttion</th>
        </tr>
        @foreach (var employee in ViewBag.employees)
        {
            <tr>
                <td>@employee.EmployeeNumber</td>
                <td>@employee.Department</td>
                <td>@employee.EducationField</td>
                <td>@employee.HourlyRate</td>
                <td>@employee.MonthlyRate</td>
                <td>@employee.MonthlyIncome</td>
                <td><a asp-controller="emplyee_details" asp-action="EditUser" asp-route-id="@employee.EmployeeNumber">Edit</a> | 
                    <a asp-controller="emplyee_details" asp-action="Delete" asp-route-id="@employee.EmployeeNumber">Delete</a></td>
            </tr>
        }
    </table>
    <script>
        $(document).ready(function () {
            var table = $('#id').DataTable({
                searchPanes: true
            });
            table.searchPanes.container().prependTo(table.table().container());
        });
    </script>
</body>
</html>
